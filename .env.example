# Nava Web Environment Variables

# Node Environment
NODE_ENV=production

# Playwright Configuration
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# API Security (set to 'none' to disable authentication)
NAVA_API_KEY=your_secure_api_key_here

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# Browser Configuration
DEFAULT_TIMEOUT=30000
MAX_CONCURRENT_SESSIONS=5

# Features
ENABLE_SCREENSHOTS=true
ENABLE_FILE_UPLOAD=true

# Browser Use Integration
USE_BROWSER_USE=false
BROWSER_USE_CLOUD=false

# LLM Configuration for Browser Use (required if USE_BROWSER_USE=true)
# Use one of the following LLM providers:
# For Anthropic Claude (recommended)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# For OpenAI GPT
# OPENAI_API_KEY=your_openai_api_key_here

# For Ollama (local, free - requires Ollama running locally)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3

# Mobile Emulation Settings
ENABLE_MOBILE_EMULATION=false
MOBILE_DEVICE=iPhone 13 Pro
MOBILE_USER_AGENT=Mozilla/5.0 (iPhone; CPU iPhone OS 15_0 like Mac OS X) AppleWebKit/605.1.15

# Optional: External Integrations
# WEBHOOK_URL=https://your-webhook.com/endpoint
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=

# Optional: Custom Configuration
# BROWSER_HEADLESS=true
